<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="500.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.stancu.presentation.controller.login.RegisterController">
    <Pane layoutY="-15.0" prefHeight="674.0" prefWidth="360.0" style="-fx-background-color: #fff;">
        <Label contentDisplay="CENTER" layoutX="112.0" layoutY="44.0" prefHeight="45.0" prefWidth="139.0"
               text=" Register ">
            <font>
                <Font name="Segoe UI Semibold" size="30.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordTextField" layoutX="23.0" layoutY="282.0" prefHeight="40.0"
                       prefWidth="315.0"/>
        <TextField fx:id="userTextField" layoutX="23.0" layoutY="197.0" prefHeight="40.0" prefWidth="315.0"/>
        <Label layoutX="24.0" layoutY="167.0" prefHeight="30.0" prefWidth="50.0" text="User">
            <font>
                <Font name="Tahoma" size="16.0"/>
            </font>
        </Label>
        <Label layoutX="27.0" layoutY="257.0" text="Password">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Button fx:id="registerButton" layoutX="25.0" layoutY="525.0" mnemonicParsing="false" onAction="#register"
                prefHeight="36.0" prefWidth="309.0" style="-fx-background-color: #49c1a2;" text="Register"
                textFill="WHITE">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <PasswordField fx:id="confirmPasswordTextField" layoutX="24.0" layoutY="367.0" prefHeight="40.0"
                       prefWidth="315.0"/>
        <Label layoutX="27.0" layoutY="342.0" text="Confirm Password">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Label layoutX="23.0" layoutY="428.0" text="Email">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="emailTextField" layoutX="24.0" layoutY="453.0" prefHeight="40.0" prefWidth="315.0"/>
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="42.0" layoutY="635.0" style="-fx-text-fill: red;"
               text="Please Check If Passwords are the Same" textAlignment="CENTER">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <ComboBox fx:id="typeComboBox" layoutX="105.0" layoutY="122.0" prefWidth="150.0"/>
        <Button fx:id="goBackButton" layoutX="83.0" layoutY="588.0" mnemonicParsing="false"
                onAction="#goBackToLoginPage"
                prefHeight="36.0" prefWidth="195.0" style="-fx-background-color: coral;" text="Changed my mind"
                textFill="WHITE">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </Pane>
</AnchorPane>
