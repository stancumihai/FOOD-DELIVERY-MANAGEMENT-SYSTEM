<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stancu.presentation.controller.login.LoginController">
   <Pane prefHeight="659.0" prefWidth="360.0" style="-fx-background-color: #fff;">
      <Label contentDisplay="CENTER" layoutX="112.0" layoutY="44.0" prefHeight="45.0" prefWidth="139.0" text=" Sing Up">
         <font>
            <Font name="Segoe UI Semibold" size="30.0"/>
         </font>
      </Label>
      <PasswordField fx:id="passwordTextField" layoutX="24.0" layoutY="237.0" prefHeight="40.0" prefWidth="315.0"/>
      <TextField fx:id="userTextField" layoutX="24.0" layoutY="152.0" prefHeight="40.0" prefWidth="315.0"/>
      <Label layoutX="24.0" layoutY="122.0" prefHeight="30.0" prefWidth="50.0" text="User">
         <font>
            <Font name="Tahoma" size="16.0"/>
         </font>
      </Label>
      <Label layoutX="24.0" layoutY="212.0" text="Password">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Button fx:id="signUpButton" layoutX="26.0" layoutY="492.0" mnemonicParsing="false" onAction="#login"
              prefHeight="36.0" prefWidth="309.0" style="-fx-background-color: #49c1a2;" text="Sing Up"
              textFill="WHITE">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
      <PasswordField fx:id="confirmPasswordTextField" layoutX="24.0" layoutY="325.0" prefHeight="40.0"
                     prefWidth="315.0"/>
      <Label layoutX="27.0" layoutY="300.0" text="Confirm Password">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="380.0" text="Email">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <TextField fx:id="emailTextField" layoutX="24.0" layoutY="405.0" prefHeight="40.0" prefWidth="315.0"/>
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="49.0" layoutY="607.0" style="-fx-text-fill: red;"
             text="Please Check If Passwords are the Same" textAlignment="CENTER">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Button fx:id="registerButton" layoutX="83.0" layoutY="557.0" mnemonicParsing="false" onAction="#register"
              prefHeight="36.0" prefWidth="195.0" style="-fx-background-color: coral;" text="Register" textFill="WHITE">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
   </Pane>
</AnchorPane>
